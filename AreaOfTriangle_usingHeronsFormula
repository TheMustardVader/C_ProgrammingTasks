#include <stdio.h>
#include <math.h>

int main(int argc, const char *argv[]){
	    double a, b, c, s, area;

		printf("\nEnter the sides of triangle:\n");
		scanf("%lf%lf%lf", &a, &b, &c);

		s = (a+b+c)/2;
		area = sqrt(s*(s-a)*(s-b)*(s-c));

		printf("\nArea of traingle using Heron's formula:\n");
		printf("%f\n", area);

	return 0;
}
