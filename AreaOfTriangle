#include <stdio.h>

int main(int argc, const char *argv[]){
	
		int h,b;
		float area;

		printf("Enter the height of the triangle: \n");
		scanf("%d", &h);
		printf("Enter the base of the triangle: \n");
		scanf("%d", &b);

		/* formula for area of the triangle */
		area = (h*b) / 2;

		printf("The area of the triangle: \n");
		printf("%f", area);

	return 0;
}
